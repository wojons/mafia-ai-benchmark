{
  "name": "@mafia/cli",
  "version": "1.0.0",
  "description": "mafiactl CLI for running games, benchmarks, and managing the Mafia AI Benchmark system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mafiactl": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "game:run": "tsx src/cli/run-game.ts",
    "game:watch": "tsx src/cli/watch-game.ts"
  },
  "dependencies": {
    "@mafia/shared": "*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "dotenv": "^16.4.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}